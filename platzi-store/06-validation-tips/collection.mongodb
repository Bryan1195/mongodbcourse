use ("platzi_store")

db.createCollection('users', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            // For declare required columns
            required: ['email','password'],
            // Not allow additional properties or columns
            additionalProperties: true,
            // To specify the datatype
            properties: {
                name: {
                    bsonType: 'string'
                },
                last_name: {
                    bsonType: 'string'
                },
                email: {
                    bsonType: 'string'
                },
                password: {
                    bsonType: 'string',
                    pattern: '^[A-Za-z0-9]{8,}$'
                },
                // To limit a range of inputs
                age: {
                    bsonType: 'number',
                    minimum: 18,
                    maximum: 99
                },
                // Declare a bool datatype
                isSingle: {
                    bsonType: 'bool'
                },
                // Create list of options
                role: {
                    enum: ["customer", "seller", "admin"],
                },
            }
        }
    }
})